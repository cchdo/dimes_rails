<h1>Login</h1>

<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <table>
      <tr><td><%= f.label :login, 'Username' %></td><td><%= f.text_field :login %></td></tr>
      <tr><td><%= f.label :password %></td><td><%= f.password_field :password %></td></tr>
  </table>
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <p>Need an account? <%= link_to 'Register', new_account_path %></p>
  <%= f.submit "Login" %>
<% end %>
