<h1>New upload in <span class="cd"><%= h curr_dir %></span></h1>

<% form_for(@upload, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :cols => 80, :rows => 8 %>
  </p>
  <p>
    <%= f.label :public %> <%= f.check_box :public %>
  </p>
  <p>
    <%= label_tag 'package' %> <%= check_box_tag 'package' %> The data file should be a zip file containing a directory structure which will be recreated.
  </p>
  <p>
    <%= f.label :uploaded_data, 'Data file' %> <%= f.file_field :uploaded_data %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', uploads_path %>
