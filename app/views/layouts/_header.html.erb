<div class='top_name'>Diapycnal and Isopycnal Mixing Experiment in the Southern Ocean</div>
<%= link_to(content_tag(:div, '', :class => :banner), root_path) %>
<div class='menu'>
<table width='750' align='center'>
<tr>
<%=
items = [
  ['Home', root_path],
  ['Components', components_path],
  ['Fieldwork', fieldwork_path],
  ['Cruise Reports', cruise_reports_path, 200],
  ['Publications', publications_path],
  ['Press', press_path],
  ['People', people_path],
  ['Calendar', calendar_path],
  ['Data', uploads_path]
]
items.map {|x|
  if x.length > 2
    content_tag(:td, link_to(x[0], x[1]), :width => x[2])
  else
    content_tag(:td, link_to(x[0], x[1]), :width => (750 / items.length))
  end
}.join(content_tag(:td, '|')) %>
</tr>
</table>
</div>
<% if u = current_user() %>
<div class='session'>
    Hello <%= h u.login -%>
    <%= link_to('Log out', logout_path, :method => :delete) %>
</div>
<% end -%>
